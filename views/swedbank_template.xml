<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data noupdate="1">

        <template id="swedbank_acquirer_button">
            <form t-if="acquirer.swedbank_BANK_CERT and tx_values.get('show_button')" t-att-action="tx_url" method="post" target="_self">
                <t t-foreach="tx_values" t-as="f">
                    <input t-if="f.startswith('VK_')" type="hidden" t-att-name="f" t-att-value="tx_values[f]"/>
                </t>
                <button type="submit" width="100px"
                        t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_swedbank/static/src/img/swedbank_icon.png"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </form>
        </template>

    </data>
</openerp>
